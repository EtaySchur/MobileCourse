
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/endDateText1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:visibility="visible" />

    <TextView
        android:id="@+id/TaskText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/DateText1"
        android:background="#4b0082"
        android:height="50dp"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/endDateText1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/DateText1"
        android:layout_below="@+id/TaskText1"
        android:background="#4DbF82"
        android:height="50dp"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/DateText1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/checkbox"
        android:background="#4bF080"
        android:height="50dp"
        android:textColor="#fff" />

</RelativeLayout>